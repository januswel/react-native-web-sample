{
  "private": true,
  "workspaces": ["modules/*"],
  "scripts": {
    "test": "jest",
    "clean": "yarn clean:dist && yarn clean:dependencies",
    "clean:dist": "find modules -name dist -type d | xargs rm -rf",
    "clean:dependencies": "find modules -name node_modules -type d | xargs rm -rf && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/jest": "24.0.12",
    "@typescript-eslint/eslint-plugin": "1.7.0",
    "@typescript-eslint/parser": "1.7.0",
    "eslint": "5.16.0",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "ts-jest": "24.0.2",
    "typescript": "3.4.5"
  }
}
